# Configurações de Produção
NODE_ENV=production
PORT=10000

# Configurações de Banco de Dados e Sessão
# Estas variáveis devem ser configuradas no painel do Render
# DATABASE_URL=
# SESSION_SECRET=

# URLs do Frontend e API
FRONTEND_URL=https://portifolio-frontend.onrender.com
VITE_API_URL=https://portifolio-backend.onrender.com

# Configurações de Performance
NODE_OPTIONS="--max-old-space-size=4096"
UV_THREADPOOL_SIZE=64

# Configurações de Segurança
CORS_ORIGIN=https://portifolio-frontend.onrender.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configurações de Cache
CACHE_TTL=3600
ENABLE_COMPRESSION=true

# Configurações do Render
RENDER_EXTERNAL_URL=https://portifolio-backend.onrender.com
RENDER_EXTERNAL_HOSTNAME=portifolio-backend.onrender.com 